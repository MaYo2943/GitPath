<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:orientation="vertical"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="2dp"
    app:cardPreventCornerOverlap="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16sp">

        <ImageView
            android:id="@+id/avatar_spv"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:src="@drawable/repo_fork"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/avatar_spv"
            android:orientation="vertical"
            android:paddingLeft="16dp">

            <TextView
                android:id="@+id/repo_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                tools:text="huanglizhuo"/>

            <TextView
                android:id="@+id/repo_description_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                tools:text="Kotlin-in-chinese"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:src="@drawable/star_black"/>

                <TextView
                    android:id="@+id/stars_num_tv"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7sp"
                    android:textSize="13sp"
                    tools:text="999"/>

                <ImageView
                    android:layout_gravity="center"
                    android:layout_marginTop="1dp"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:src="@drawable/repo_fork"/>

                <TextView
                    android:id="@+id/fork_num_tv"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7sp"
                    android:textSize="13sp"
                    tools:text="999"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>